<html>
<head>
    <title>Combined CSV Parser</title>
    <style>
        table {
            font-family: Arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }
    </style>
</head>
<body>
    <div id="tableContainer"></div>

    <script>
        let data1 = [];
        let data2 = [];

        function parseCSV() {
            // Simulating file upload by hardcoding file paths
            let filePath1 = 'https://example.com/data1.csv'; // First CSV file path
            let filePath2 = 'https://example.com/data2.csv'; // Second CSV file path

            // Simulate reading file from network path
            // In a real application, use appropriate file reading methods
            let reader1 = {
                result: `id,name,age\n1,John,30\n2,Jane,25\n3,Doe,40` // Simulated CSV data
            };

            let reader2 = {
                result: `id,salary,department\n1,5000,HR\n2,6000,Finance\n3,7000,Marketing` // Simulated CSV data
            };

            let contents1 = reader1.result;
            let rows1 = contents1.split("\n");
            let contents2 = reader2.result;
            let rows2 = contents2.split("\n");

            let table = "<table>";
            for (let i = 0; i < rows1.length; i++) {
                table += "<tr>";
                let cells = rows1[i].split(",");
                for (let j = 0; j < cells.length; j++) {
                    if (i === 0) {
                        table += "<th>" + cells[j] + "</th>";
                    } else {
                        table += "<td>" + cells[j] + "</td>";
                    }
                }
                if (i === 0) {
                    let cells2 = rows2[0].split(",");
                    for (let j = 1; j < cells2.length; j++) {
                        table += "<th>" + cells2[j] + "</th>";
                    }
                }
                table += "</tr>";
            }
            for (let i = 1; i < Math.max(rows1.length, rows2.length); i++) {
                table += "<tr>";
                let cells1 = rows1[i] ? rows1[i].split(",") : Array(cells.length).fill('');
                let cells2 = rows2[i] ? rows2[i].split(",") : Array(2).fill('');
                for (let j = 0; j < cells1.length; j++) {
                    table += "<td>" + cells1[j] + "</td>";
                }
                for (let j = 1; j < cells2.length; j++) {
                    table += "<td>" + cells2[j] + "</td>";
                }
                table += "</tr>";
            }
            table += "</table>";
            document.getElementById("tableContainer").innerHTML = table;
        }
    </script>
</body>
