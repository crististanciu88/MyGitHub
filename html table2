<!DOCTYPE html>
<html>
<head>
    <title>CSV Parser</title>
</head>
<body>
    <input type="file" id="fileUpload" />
    <button onclick="parseCSV()">Upload</button>
    <br><br>
    <input type="text" id="filterInput" onkeyup="filterTable()" placeholder="Filter...">
    <br><br>
    <div id="tableContainer"></div>

    <script>
        function parseCSV() {
            let file = document.getElementById("fileUpload").files[0];
            let reader = new FileReader();

            reader.onload = function (e) {
                let contents = e.target.result;
                let rows = contents.split("\n");
                let table = "<table style='border: 1px solid black; border-collapse: collapse;'>";
                
                for (let i = 0; i < rows.length; i++) {
                    table += "<tr>";
                    let cells = rows[i].split(",");
                    for (let j = 0; j < cells.length; j++) {
                        if (i === 0) {
                            table += "<th style='border: 1px solid black; padding: 10px; background-color: lightgray;'>" + cells[j] + "</th>";
                        } else {
                            table += "<td style='border: 1px solid black; padding: 10px;'>" + cells[j] + "</td>";
                        }
                    }
                    table += "</tr>";
                }
                table += "</table>";
                document.getElementById("tableContainer").innerHTML = table;
            };

            reader.readAsText(file);
        }

        function filterTable() {
            let input, filter, table, tr, td, i, txtValue;
            input = document.getElementById("filterInput");
            filter = input.value.toUpperCase();
            table = document.getElementsByTagName("table")[0];
            tr = table.getElementsByTagName("tr");

            for (i = 1; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td");
                let found = false;
                for (let j = 0; j < td.length; j++) {
                    txtValue = td[j].textContent || td[j].innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        found = true;
                        break;
                    }
                }
                if (found) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    </script>
</body>
</html>
